SELECT name,birthday FROM user ;

SELECT * FROM user WHERE name LIKE '%m%' OR password LIKE '%m%' ;

SELECT * FROM user WHERE name LIKE '%m%' OR password LIKE '%m%' LIMIT 10,5 ;