DROP TABLE user ;	-- 删除表
CREATE TABLE user(
	id		INT		AUTO_INCREMENT PRIMARY KEY ,
	name		VARCHAR(30)	NOT NULL ,
	password 	VARCHAR(32)	NOT NULL ,
	age		INT		NOT NULL ,
	sex		VARCHAR(2)	DEFAULT '男' ,
	birthday	DATE 
) ;

CREATE TABLE users(
   id    VARCHAR(30) ,
   name  VARCHAR(30),
   password  VARCHAR(30)
);

